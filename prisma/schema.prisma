generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  cpf       String   @unique
  createdAt DateTime @default(now())
  city      String?
  country   String?  @default("BR")
  email     String?  @unique
  firstName String?
  lastName  String?
  phone     String?
  state     String?
  zip       String?
  orders    Order[]
}

model Order {
  id           String        @id @default(uuid())
  userId       String
  amount       Float
  status       String        @default("pending")
  createdAt    DateTime      @default(now())
  quantity     Int           @default(0)
  metaEventId  String?
  user         User          @relation(fields: [userId], references: [id])
  tickets      Ticket[]
  transactions Transaction[]

  @@index([userId])
  @@index([status])
}

model Transaction {
  id           String   @id @default(uuid())
  orderId      String
  value        Float
  status       String   @default("pending")
  gatewayId    String?
  createdAt    DateTime @default(now())
  pixCopiaCola String?  @map("pixcopiacola")

  // ✅ NOVO: guarda _fbp/_fbc/ip/ua/extra (opcional, não quebra nada)
  meta         Json?    @db.JsonB

  order        Order    @relation(fields: [orderId], references: [id])

  @@index([orderId])
  @@index([status])
}

model Ticket {
  id        String   @id @default(uuid())
  orderId   String
  number    Int
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])

  @@index([orderId])
  @@index([number])
}
